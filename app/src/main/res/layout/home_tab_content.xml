<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_108">
    <ImageView
        android:id="@+id/tab_content_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tab_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_content_image"
        android:layout_marginTop="@dimen/qb_px_10"
        android:textColor="@color/color_white"
        android:textSize="@dimen/qb_px_20"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/tab_content_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_status"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
</RelativeLayout>